	color: rgba(51, 155, 51, 1);
}
.ok-rating-count {
	background-color: rgba(155, 155, 0, 0.1);
	border-color: rgba(155, 155, 0, 0.3);
	color: #a80;
	color: rgba(155, 155, 0, 1);
}
.bad-rating-count {
	background-color: rgba(155, 51, 51, 0.1);
	border-color: rgba(155, 51, 51, 0.3);
	color: rgba(155, 51, 51, 1);
